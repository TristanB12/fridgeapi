// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  email String @unique
  hash  String

  devices Device[]
  products Product[]
  lists List[]
}

model Device {
  id Int @id @default(autoincrement())

  notification_token String @unique

  user User @relation(fields: [user_id], references: [id])
  user_id Int
}

model List {
  id Int @id @default(autoincrement())

  name String

  products Product[]

  user   User   @relation(fields: [user_id], references: [id])
  user_id Int
}

model Product {
  id Int @id @default(autoincrement())

  name        String
  expiry_date DateTime

  quantity      Int?
  quantity_type QuantityType?

  status ProductStatus? @default(present)

  user   User   @relation(fields: [user_id], references: [id])
  list List? @relation(fields: [list_id], references: [id])
  list_id Int?
  user_id Int
}

enum QuantityType {
  g
  mL
  pcs
}

enum ProductStatus {
  present
  discarded
  consummed
}